<div class="detail-head">
	<div class="contain-head">
		<div class="picturs-detail">
			<img src="<%= @details.image %>" class="picture-element">
		</div>
		<div class="text-detail">
			<div class="detail-projet-title">
				<%= @details.titre_du_projet %>
			</div>
			<div class="projet-detail-slogan">
				<%= @details.description %>
			</div>
			<div class="categorie-details-project">
				-Categorie du projet- CODE: <%= @details.odd %>
			</div>
		</div>
	</div>
	<div  class="contain-suivre">
		<div class="border-suivi pointer">
			<img src="/logo/button/details_page/suivre.png" class="suivre-button-details">
		</div>
	</div>
</div>
<div class="details-video">
	<div class="video-contain">
	    <video class="video" id="video" controls>
	      <source src="/video/video01.mp4">
	    </video>
	</div>
	<div class="video-details">
		<div class="objectif-detail">
			<div class="collect">
				<div class="progress-statut">
					<div class="progress-items"></div>
				</div>
				<div class="progress-statut">   
					<p>
						<span class="text-detail-color"><%= @details.financement %> Colléctées</span>
							<br> sur <br>
						<span class="text-detail-color"><%= @details.jeutons %> requis</span>
					</p>
				</div>
			</div>
			<div class="day-finish">
				<div class="day-details">
					jours restants <br> <%= @details.j_restant %>
				</div>
				<div class="valifunder-details">
					Valifunders <br> 0
				</div>
			</div>
		</div>
		<div class="project-identify">
			<img src="/logo/button/details_page/button.png" class="details-button">
		</div>
		<div class="project-none">
			<div class="details-statut">
				<img src="/logo/body/fond.jpg" class="details-status-picture">
			</div>
			<div class="details-statut">
				<span class="text-detail-color"><%= @details_users.firstname %> <%= @details_users.lastname %>(<%= @details_users.username %>)</span>
				<span class="text-detail-color"><%= @details.localisation %></span>
				<span class="text-detail-color">NB de projets créer</span>
				<span class="text-detail-color">
					NB de projets soutenus
				</span>
			</div>
		</div>
	</div>
</div>
<div class="soutenir-details-one pointer">
	<img src="/logo/button/details_page/soutenir.png" class="soutenir-mQiY">
</div>
<div class="contrepartie-head">
	<div class="contrepartie-text">
		<p>
			Votre contributions vous sera integralement remboursée si le projet n'atteint pas 100% de son objectif
		</p>
	</div>
	<div class="contrepartie-one">
		<p class="choice-paragraph">
			Choisser votre contrepartie.
		</p>
	</div>
</div>

<div class="contre-partie-element">
	<div class="arrow-left-cotrepartie">
		<img src="/logo/button/details_page/arrow_left.png" class="arrow-details pointer">
	</div>
	<div class="items-contreparties">
		<div class="item-partie">
			<div class="title-contrepartie">
				<p class="text-detail-color">
					Pour nb de Takalo ou plus
				</p>
			</div>
			<div class="description-contrepartie">
				Description de la contreparties (40 Mots minimum)
			</div>
			<div class="nb-disponible">
				<div>Nb disponible</div>
				<div>Nb valifunders</div>
			</div>
			<div class="date-envoie">Date d'envoie</div>
			<div class="soutenir">
				<img src="/logo/button/details_page/green_soutenir.png" class="green_soutenir pointer">
			</div>
		</div>

		<div class="item-partie"></div>
		<div class="item-partie"></div>
		<div class="item-partie"></div>
	</div>
	<div class="arrow-rigth-cotrepartie">
		<img src="/logo/button/details_page/arrow_rigth.png" class="arrow-details pointer">
	</div>
</div>



<div class="tab-details">
	<div class="tab-center">
		<div class="width-details">
			<ul class="tabs">
				<li class="tab active item-one-details">
					<a href="#test1" class="color-1">
			            A propos du projet
			        </a>
				</li>
				<li class="tab item-one-details">
					<a href="#test2" class="color-1">
						Actualités
					</a>
				</li>
				<li class="tab item-one-details">
					<a href="#test3" class="color-1">
			            Commentaires
			          </a>
				</li>
				<li class="tab item-one-details">
					<a href="#test4" class="color-1">
			        	Valifunders
					</a>
				</li>
			</ul>
		</div>
	</div>

	<div id="test1" class="heigth-one">
