<div class="page_users">
  <div class="connection-user center">
    <div class="new-user_p">
      <div class="new_user_margin">
        <div class="nex_users">
          <div class="image_users_l">
            <img src="/logo/header/header.png" class="resize_image">
          </div>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-control_user') do |f| %>
            <div class="reorder-users_new"> 
              <div class="usersname_input">
                <label for = "username" class="label_new_users left">Pseudo</label>
                <%= f.text_field :login, autofocus: true,class: 'input_users', autocomplete: "email" %>
              </div>
              <div class="usersname_input">
                <label for = "username" class="label_new_users left">Mot de passe</label>
                <%= f.password_field :password,class: 'input_users', autocomplete: "current-password" %>
              </div>
                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end %>
              <div class="button-send">
                <div class="bt_users_confirm actions">
                    <%= f.submit "Log in" %>
                </div>
              </div>
              <div class="link-left">
                <p>
                  <%= render "devise/shared/links" %>
                </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>