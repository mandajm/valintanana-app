<%= render 'layouts/head' %>


<div class="project-div">
	<div class="project-text">
		Projets à la une
	</div>
</div>


<div class="margin">
	<div class="project-padding">
		<div class=	"project-contain">
			<% if !@projet.blank? %>
				<% for item in @projet %>

			<div class="project-items">
				<div class= "project-title">
					<p class="text-title" > <%= item.titre_du_projet %></p>
				</div>
				<div class="project-picture">
					<img src="<%= item.image %>" class="project-specify">
				</div>
				<div class="project-creater">
					<div class="project-object">
						<img src="/logo/body/fond.jpg" class="user-pictur">
					</div>
					<div class="project-object user-specify">
						<div class=" user-name"><%= User.find(id = item.user_id).username %></div>
						<div class="university-name"><%= item.odd %> </div>
					</div>
				</div>
				<div class="categorie-odd"> - Catégorie du Projet -ODD: <%= item.odd %></div>
				<div class="items-all">
					<div class="numbers-left color-green"><%= item.financement %></div>
					<div class="numbers-rigth color-green">Nb</div>
				</div>
				<div class="items-all">
					<div class="numbers-left"><%= item.jeutons %></div>
					<div class="numbers-rigth">Valifunder</div>
				</div>
				<% @width_1 = (item.financement * 100)/item.jeutons %>
				<div class="progress taills-height">
					<div class="determinate progress-bar" style="width:<%= @width_1 %>%;"></div>
				</div>
				<div class="items-all items-float">
					<div class="numbers-left color-green"><%= @width_1 %> %</div>
					<div class="numbers-rigth color-green">J-<%= item.j_restant %></div>
				</div>
				<div class="project-description">
					<div class="description-content">
						<%= item.description %>
					</div>
				</div>
				<div class="items-button">
					<div class="soutenir-button pointer">
						<a href="/details/<%= item.id%>">
							<img src="/logo/button/details_page/green_soutenir.png" class="soutenir_class">
						</a>
					</div>
					<div class="suivre-button pointer">
					<img src="/logo/button/home_page/suivre.png" class="suivre-home">
					</div>
				</div>
			</div>

				<% end %>
			<% else %>
				
			<% end %>
		</div>
	</div>
</div>

<div class="button-all-projets">
